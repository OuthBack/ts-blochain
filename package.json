{
  "name": "dev",
  "version": "1.0.0",
  "description": "typescript blockchain",
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "module": "build/module/index.js",
  "repository": "https://github.com/OuthBack/dev",
  "license": "MIT",
  "keywords": [],
  "scripts": {
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:lint": "eslint src --ext .ts --fix",
    "test": "jest",
    "test:lint": "eslint src --ext .ts",
    "test:prettier": "prettier \"src/**/*.ts\" --list-different",
    "test:spelling": "cspell \"{README.md,.github/*.md,src/**/*.ts}\"",
    "test:unit": "nyc --silent ava",
    "cov:check": "nyc report && nyc check-coverage --lines 100 --functions 100 --branches 100",
    "dev": "yarn start-redis && cross-env ENV='development' tsc-watch --onSuccess \"node -r ./tsconfig-paths-dist.js build/main/index.js --inspect\" ",
    "dev-work": "start-redis && cross-env ENV='development' tsc-watch --onSuccess \"node -r ./tsconfig-paths-dist.js build/main/work/index.js --inspect\" ",
    "dev-peer": "cross-env ENV='development' GENERATE_PEER_PORT='true' tsc-watch --onSuccess \"node -r ./tsconfig-paths-dist.js build/main/index.js --inspect\"",
    "start": "node -r ts-node/register -r tsconfig-paths/register build/main/index.js",
    "start-redis": "redis-server --daemonize yes"
  },
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "@bitauth/libauth": "^1.17.1",
    "@types/elliptic": "^6.4.14",
    "@types/jest": "^27.4.1",
    "@types/uuid": "^8.3.4",
    "body-parser": "^1.19.2",
    "cors": "^2.8.5",
    "elliptic": "^6.5.4",
    "express": "^4.17.3",
    "hex-to-binary": "^1.0.1",
    "jest": "^27.5.1",
    "redis": "^4.0.4",
    "request": "^2.88.2",
    "ts-jest": "^27.1.3",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@ava/typescript": "^1.1.1",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/express": "^4.17.13",
    "@types/redis": "^4.0.11",
    "@types/request": "^2.48.8",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "ava": "^3.12.1",
    "codecov": "^3.5.0",
    "cross-env": "^7.0.3",
    "cspell": "^4.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-functional": "^3.0.2",
    "eslint-plugin-import": "^2.22.0",
    "gh-pages": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "open-cli": "^6.0.1",
    "prettier": "^2.1.1",
    "standard-version": "^9.0.0",
    "ts-node": "^9.0.0",
    "tsc-watch": "^4.6.0",
    "tsconfig-paths": "^3.14.1",
    "typedoc": "^0.19.0",
    "typescript": "^4.0.2"
  },
  "files": [
    "build/main",
    "build/module",
    "!**/*.spec.*",
    "!**/*.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "ava": {
    "failFast": true,
    "timeout": "60s",
    "typescript": {
      "rewritePaths": {
        "src/": "build/main/"
      }
    },
    "files": [
      "!build/module/**"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "prettier": {
    "singleQuote": true
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "exclude": [
      "**/*.spec.js"
    ]
  }
}
