{
  "compilerOptions": {
    "incremental": true,
    "target": "es2019",
    "outDir": "build/main",
    "baseUrl": "./src",
    "module": "commonjs",
    "declaration": true,
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "traceResolution": false,
    "listEmittedFiles": false,
    "listFiles": false,
    "pretty": true,
    "lib": ["es2019"],
    "types": ["node", "jest"],
    "typeRoots": ["node_modules/@types", "src/types"],
    "paths": {
      "@core/*": ["./core/*"],
      "@util/*": ["./util/*"],
      "@domain/*": ["./domain/*"],
      "@configs": ["./configs"]
    }
  },
  "exclude": [
    "node_modules/**",
    "tsconfig-paths-dist.js",
    "jest.config.js",
    "build"
  ],
  "compileOnSave": false,
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
